{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Labour Force By Educational Attainment",
    "width": "container",
    "height": 300,
    "params": [
      {
        "name": "year_selection",
        "value": 2021,
        "bind": {
          "input": "range",
          "min": 2011,
          "max": 2021,
          "step": 1,
          "name": "Year: "
        }
      }
    ],
    "data": {
      "url": "/data/LabourForce_Education.csv"
    },
    "transform": [
      {"filter": "datum.Year == year_selection"}
    ],
    "encoding": {
      "y": {
        "field": "Education",
        "type": "nominal",
        "title":"Education Level"
      },
      "x": {
        "field": "Value",
        "type": "quantitative",
        "title": "Labour Force (000)"
      },
      "color": {"value": "indigo"},
      "tooltip": [
        {"field": "Education", "type": "nominal", "title": "Education Level"},
        {"field": "Value", "type": "quantitative", "title": "Labour Force"}
      ]
    },
    "layer": [
      {"mark": {"type": "bar", "height": 10}},
      {
        "mark": {"type": "image", "width": 70, "height": 35},
        "encoding": {"url": {"field": "URL", "type": "nominal"}}
      }
    ]
  }
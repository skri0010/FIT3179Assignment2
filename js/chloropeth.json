{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Unemployed Persons Per 100,000 Population (Malaysia 2021)",
    "width": 750,
    "height": 350,
    "projection": {"type": "equirectangular"},
    "layer": [
      {
        "data": 
        {
          "url": "/js/malaysia.topojson",
          "format": {"type": "topojson", "feature": "states"}
        },
    
        "transform": [
          {
            "lookup": "properties.Name",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/skri0010/FIT3179Assignment2/main/data/LabourForce_Strata_and_State.csv"
              },
              "key": "State",
              "fields": ["Unemployed","Unemployment_rate"]
            }
          },
          {"calculate": "(datum.Unemployed *1000)/22700000*100000", "as": "Unemployed"},
          {"calculate": "datum.Unemployment_rate/100", "as": "Unemployment_rate"}
        ],
        "mark": {
          "type": "geoshape",
          "stroke": "white",
          "strokeWidth":0.8
        },
        "encoding": {
          "color": {
            "field": "Unemployed",
            "type": "quantitative",
            "scale": {"type": "threshold",
            "domain": [100, 400,700],
            "range": ["#ffffb2", "#fecc5c", "#fd8d3c", "#cc4c02"]
          }
          },
          "tooltip": [
            {"field": "properties.Name", "type": "nominal", "title": "State"},
            {"field": "Unemployed", "type": "quantitative","format":".2f"},
            {"field": "Unemployment_rate", "type": "quantitative","format":".1%","title":"Unemployment Rate"}
          ]
        }
      },
      {
        "data": {
          "url": "/js/malaysia.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_1"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "gray","strokeWidth":0.2}
      }
    ]
  }
